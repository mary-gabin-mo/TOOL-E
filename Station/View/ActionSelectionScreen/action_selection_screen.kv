<ActionSelectionScreen>:
    md_bg_color: 1, 1, 1, 1  # White background

    MDBoxLayout:
        orientation: 'vertical'
        padding: "40dp"
        spacing: "10dp"
        pos_hint: {"center_x": .5, }

        # -- Logo Area Placeholder --
        Widget:
            size_hint_y: 0.65

        # # -- Title --
        # MDLabel:
        #     text: "TOOL-E Checkout"
        #     halign: "center"
        #     font_style: "H3"
        #     theme_text_color: "Primary"
        #     bold: True
        #     size_hint_y: 0.1

        MDLabel:
            text: "Select Action Type"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Secondary"
            bold: True
            size_hint_y: None
            height: "60dp"
            padding_top: "10dp"

        MDBoxLayout:
            orientation: 'horizontal'
            padding: "20dp", "10dp"
            spacing: "40dp"
            pos_hint: {"center_x": .5}
            size_hint_y: None
            height: "180dp"

            MDFillRoundFlatButton:
                text: "BORROW"
                font_size: "32sp"
                size_hint_x: 0.6
                size_hint_y: 0.8
                pos_hint: {"center_x": .5}
                md_bg_color: 0.9, 0.17, 0.25, 1  # Red
                on_release: root.select_borrow()

            MDFillRoundFlatButton:
                text: "RETURN"
                font_size: "32sp"
                size_hint_x: 0.6
                size_hint_y: 0.8
                pos_hint: {"center_x": .5}
                md_bg_color: 0.9, 0.17, 0.25, 1  # Red
                on_release: root.select_return()

        # -- Spacer --
        Widget:
            size_hint_y: 0.1

        # -- Dev Button --
        MDFillRoundFlatButton:
            text: "DEV: List Tools"
            font_size: "18sp"
            size_hint: 0.5, 0.08
            pos_hint: {"center_x": .5}
            md_bg_color: 0.2, 0.2, 0.2, 1
            on_release: root.go_to('tool select screen')

        # -- Spacer --
        Widget:
            size_hint_y: 0.4

        # -- Cancel Button --
        MDFillRoundFlatButton:
            text: "Cancel"
            font_size: "24sp"
            size_hint: 1, 0.01
            pos_hint: {"center_x": .5}
            md_bg_color: 0.9, 0.17, 0.25, 1  # Red
            on_release: root.go_back('welcome screen')

        # Widget:
        #     size_hint_y: 0.01