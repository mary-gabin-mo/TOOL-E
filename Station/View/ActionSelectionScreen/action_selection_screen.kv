<ActionSelectionScreen>:
    md_bg_color: 1, 1, 1, 1  # White background

    MDBoxLayout:
        orientation: 'vertical'
        padding: "40dp"
        spacing: "30dp"
        pos_hint: {"center_x": .5, }

        # -- Logo Area Placeholder --
        Widget:
            size_hint_y: 1

        # # -- Title --
        # MDLabel:
        #     text: "TOOL-E Checkout"
        #     halign: "center"
        #     font_style: "H3"
        #     theme_text_color: "Primary"
        #     bold: True
        #     size_hint_y: 0.1

        MDLabel:
            text: "Select action type"
            halign: "center"
            font_style: "H5"
            theme_text_color: "Secondary"
            # size_hint_y: 0.2

        MDBoxLayout:
            orientation: 'horizontal'
            padding: "40dp"
            spacing: "30dp"
            pos_hint: {"center_x": .5, "center_y": .1}
            size_hint_y: 1

            MDFillRoundFlatButton:
                text: "BORROW"
                font_size: "24sp"
                size_hint_x: 0.6
                pos_hint: {"center_x": .5}
                md_bg_color: 0.9, 0.17, 0.25, 1  # Red
                on_release: root.select_borrow()

            MDFillRoundFlatButton:
                text: "RETURN"
                font_size: "24sp"
                size_hint_x: 0.6
                pos_hint: {"center_x": .5}
                md_bg_color: 0.9, 0.17, 0.25, 1  # Red
                on_release: root.select_return()

        # -- Spacer --
        Widget:
            size_hint_y: 0.6

        # -- Cancel Button --
        MDFillRoundFlatButton:
            text: "Cancel"
            font_size: "24sp"
            size_hint: 1, 0.01
            pos_hint: {"center_x": .5}
            md_bg_color: 0.9, 0.17, 0.25, 1  # Red
            on_release: root.go_back('welcome screen')

        # Widget:
        #     size_hint_y: 0.01