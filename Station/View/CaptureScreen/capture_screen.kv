<CaptureScreen>:
    md_bg_color: 1, 1, 1, 1  # White background

    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"

        MDLabel:
            text: "Place tool on Bed"
            halign: "center"
            font_style: "H4"
            size_hint_y: 0.1

        # --- Live Feed Window
        Image:
            id: camera_preview
            source: "assets/images/logo_white.png"
            allow_stretch: True
            keep_ratio: True
            size_hint_y: 0.7

            # border to frame the window
            canvas.before:
                Color: 
                    rgba: 0.9, 0.9, 0.9, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

        # -- DEV -- Main Button --
        MDFillRoundFlatButton:
            text: "CANCEL"
            font_size: "24sp"
            size_hint: 1, 0.01
            pos_hint: {"center_x": .5}
            md_bg_color: .2, .6, .8, 1  # Blue-ish
            on_release: root.go_to_main()