<BaseScreen>:
    # 1. Global White Background for all screens
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1 # White
        Rectangle:
            pos: self.pos
            size: self.size
    
    # 2. The Master Layout
    FloatLayout:
        # 3. The Logo
        Image:
            source: "assets/images/logo_black.png"
            size_hint_y: 0.12
            pos_hint: {"top": 0.95, "center_x": .5}
            allow_stretch: True
            keep_ratio: True

        # -- Title --
        MDLabel:
            text: "TOOL-E Kiosk"
            size_hint_y: 0.1
            pos_hint: {"top": 0.85, "center_x": .5}
            halign: "center"
            font_style: "H3"
            theme_text_color: "Primary"
            bold: True


        