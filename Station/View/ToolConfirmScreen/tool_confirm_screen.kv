<ToolConfirmScreen>:
    md_bg_color: 1, 1, 1, 1  # White background

    MDBoxLayout:
        orientation: 'vertical'
        padding: "40dp"
        spacing: "30dp"
        pos_hint: {"center_x": .5, "center_y": .5}

        # -- Logo Area --
        Image:
            source: "assets/images/logo_black.png"
            size_hint_y: 0.3
            allow_stretch: True
            keep_ratio: True

       # -- Title --
        MDLabel:
            text: "TOOL-E Checkout"
            halign: "center"
            font_style: "H3"
            theme_text_color: "Primary"
            bold: True
            size_hint_y: 0.1

        MDLabel:
            text: "Is this the correct tool?"
            halign: "center"
            font_style: "H5"
            theme_text_color: "Secondary"
            size_hint_y: 0.1

        # -- DEV -- Main Button --
        MDFillRoundFlatButton:
            text: "Cancel"
            font_size: "24sp"
            size_hint: 1, 0.01
            pos_hint: {"center_x": .5}
            md_bg_color: .2, .6, .8, 1  # Blue-ish
            on_release: root.go_to_main()