<CheckoutConfirmationScreen>:
    md_bg_color: 1, 1, 1, 1  # White background

    MDBoxLayout:
        orientation: 'vertical'
        padding: "40dp"
        spacing: "30dp"
        pos_hint: {"center_x": .5, "center_y": .5}

        # --- Logo Area Placeholder ---
        Widget:
            size_hint_y: 0.3

        # --- Success Icon/Checkmark Area ---
        MDIcon:
            icon: "check-circle"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0.2, 0.8, 0.2, 1  # Green
            font_size: "80sp"
            size_hint_y: None
            height: "100dp"

        # --- Title ---
        MDLabel:
            text: "Checkout Confirmed!"
            halign: "center"
            font_style: "H4"
            bold: True
            theme_text_color: "Primary"
            size_hint_y: None
            height: "60dp"

        # --- Date Display ---
        MDLabel:
            id: date_display
            text: "Check confirmed for this date:"
            halign: "center"
            font_style: "H6"
            theme_text_color: "Secondary"
            size_hint_y: None
            height: "80dp"

        # --- Spacer ---
        Widget:
            size_hint_y: 0.3

        # --- Continue Button (Keep User Logged In) ---
        MDFillRoundFlatButton:
            text: "RETURN TO SELECTION"
            font_size: "24sp"
            size_hint: 0.7, None
            height: "80dp"
            pos_hint: {"center_x": .5}
            md_bg_color: 0.2, 0.6, 0.8, 1  # Blue
            on_release: root.continue_with_user()

        # --- Return Button ---
        MDFillRoundFlatButton:
            text: "RETURN TO START"
            font_size: "24sp"
            size_hint: 0.7, None
            height: "80dp"
            pos_hint: {"center_x": .5}
            md_bg_color: 0.9, 0.17, 0.25, 1  # Red
            on_release: root.return_to_menu()

        # --- Spacer ---
        Widget:
            size_hint_y: 0.1
